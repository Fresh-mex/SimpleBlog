<!DOCTYPE html>
<html>
  <head>
    <title>SimpleApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag  'https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'  %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <div class="navbar-header">
      <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon">Toggle Navigation</span>
      </button>
      <a class="navbar-brand" href="/" style="font-size: 40px">SimpleBlog</a>
    </div>
    <div id="navbar" class="navbar-nav">
      <ul class="nav navbar">
        <li><%= link_to "Home", home_path %></li>
      </ul>
      <ul class="nav navbar ">
        <li><%= link_to "Create Post", new_post_path %></li>
      </ul>
      <ul class="nav navbar ">
        <li><%= link_to "About", about_path %></li>
      </ul>
    </div>
  </div>
</nav>
<br/>

<div class="container">
  <%= yield %>
</div>
<body>
</body>
</html>
